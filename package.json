{
  "name": "{{NAME}}",
  "version": "1.0.0",
  "description": "{{DESCRIPTION}}",
  "private": "true",
  "scripts": {
    "watch": "npm-run-all clean watch:assets",
    "watch:css": "nodemon --watch {{SRC_PATH}}scss -e scss --exec 'npm run build:css'",
    "watch:js": "nodemon --watch {{SRC_PATH}}js -e js --exec 'npm run lint:js'",
    "watch:babel": "watchify {{SRC_PATH}}js/app.js -v -o {{DIST_PATH}}/js/app.js -d -t [babelify] -p [minifyify --map app.js.map --output {{DIST_PATH}}/js/app.js.map]",
    "watch:sprite": "nodemon --watch {{SRC_PATH}}icons -e svg --exec 'npm run build:sprite'",
    "watch:img": "nodemon --watch {{SRC_PATH}}img -e svg,jpg,png,jpeg,gif --exec 'npm run build:img'",
    "watch:font": "nodemon --watch {{SRC_PATH}}fonts -e woff,woff2 --exec 'npm run build:font'",
    "watch:fav": "nodemon --watch {{SRC_PATH}}favicons -e svg,png --exec 'npm run build:fav'",
    "watch:assets": "npm-run-all -p watch:css watch:js watch:babel watch:sprite watch:img watch:font watch:fav",
    "build:css": "npm-run-all css:sass css:prefix",
    "build:js": "npm-run-all lint:js babel:js",
    "build:sprite": "npm-run-all sprite:optim sprite:store",
    "build:img": "npm-run-all svg:optim img:optim",
    "build:font": "npm-run-all font:copy",
    "build:fav": "npm-run-all fav:copy",
    "build:assets": "npm-run-all build:js build:css build:sprite build:img build:font",
    "css:sass": "node-sass --include-path {{SRC_PATH}}scss --include-path node_modules {{SRC_PATH}}scss/app.scss {{DIST_PATH}}/css/app.css --source-map true",
    "css:prefix": "postcss --use autoprefixer -o {{DIST_PATH}}/css/app.css {{DIST_PATH}}/css/app.css",
    "babel:js": "browserify {{SRC_PATH}}js/app.js -v -o {{DIST_PATH}}/js/app.js -d -t [babelify] -p [minifyify --map app.js.map --output {{DIST_PATH}}/js/app.js.map]",
    "lint:js": "eslint {{SRC_PATH}}js/",
    "clean:js": "rm -rf {{DIST_PATH}}/js/*",
    "clean:css": "rm -rf {{DIST_PATH}}/css/*",
    "clean:sprite": "rm -f {{DIST_PATH}}/sprite.svg",
    "clean:img": "rm -rf {{DIST_PATH}}/img/*",
    "clean:font": "rm -rf {{DIST_PATH}}/fonts/*",
    "clean:fav": "rm -rf {{DIST_PATH}}/favicons/*",
    "clean:assets": "npm-run-all clean:js clean:css clean:img clean:sprite clean:font",
    "clean:tmp": "rm -rf tmp/*",
    "clean": "npm-run-all clean:assets clean:tmp",
    "sprite:store": "svgshelf 'tmp/*.svg' {{DIST_PATH}}/sprite.svg",
    "sprite:optim": "svgo {{SRC_PATH}}icons/ tmp/",
    "svg:optim": "svgo {{SRC_PATH}}img/ {{DIST_PATH}}/img/ --disable=cleanupIDs --disable=mergePaths --disable=convertShapeToPath --disable=transformsWithOnePath --disable=collapseGroups",
    "img:optim": "imagemin {{SRC_PATH}}img/**/*.{png,jpg,jpeg,gif} --out-dir={{DIST_PATH}}/img/",
    "font:copy": "cp -r {{SRC_PATH}}fonts/. {{DIST_PATH}}/fonts/",
    "fav:copy": "cp -r {{SRC_PATH}}favicons/. {{DIST_PATH}}/favicons/",
    "start": "npm-run-all clean build:assets"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "include-media": "^1.4.8",
    "move-js": "^0.5.0",
    "page": "^1.7.1",
    "sass-to-js": "^1.3.0",
    "superagent": "^2.3.0",
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^2.11.0",
    "imagemin-cli": "^3.0.0",
    "minifyify": "^7.3.3",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.1.2",
    "object-fit-images": "^2.5.9",
    "postcss-cli": "^2.5.2",
    "svgo": "^0.6.6",
    "svgshelf": "^1.0.3",
    "watchify": "^3.8.0"
  },
  "author": "Lo√Øc Hamet",
  "license": "ISC"
}
